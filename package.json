{
  "name": "ts-graphql-server-base",
  "version": "1.0.0",
  "author": "Kei Fujikawa",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env --watch-path ./src --import tsx ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "rimraf dist && tsc && copyfiles -u 1 'src/**/*.graphql' dist/",
    "gen:graphql": "graphql-codegen-esm --config codegen.ts",
    "gen:kysely": "kysely-codegen --camel-case --url postgres://postgres:postgres@localhost:5432/app --out-file ./src/common/db/types.ts",
    "lint": "pnpm biome check --write .",
    "test": "glob -c \"node --import tsx --test\" \"./src/**/*.test.ts\""
  },
  "engines": {
    "node": "20.15.1",
    "pnpm": "9.5.0",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@graphql-tools/graphql-file-loader": "^8.0.1",
    "@graphql-tools/load": "^8.0.2",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.4",
    "@graphql-tools/schema": "^10.0.4",
    "dataloader": "^2.2.2",
    "fastify": "^4.28.1",
    "graphql": "^16.9.0",
    "graphql-constraint-directive": "^5.4.3",
    "graphql-scalars": "^1.23.0",
    "kysely": "^0.27.4",
    "lodash-es": "^4.17.21",
    "pg": "^8.12.0",
    "winston": "^3.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/graphql-modules-preset": "^4.0.9",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.6",
    "copyfiles": "^2.4.1",
    "glob": "^10.4.5",
    "kysely-codegen": "^0.15.0",
    "rimraf": "^5.0.9",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
