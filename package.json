{
  "name": "ts-graphql-server-base",
  "version": "1.0.0",
  "author": "Kei Fujikawa",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env --watch-path ./src --loader ts-node/esm -r tsconfig-paths/register ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "rimraf dist && tsc && copyfiles -u 1 'src/**/*.graphql' dist/",
    "gen:graphql": "graphql-codegen-esm --config codegen.ts",
    "gen:kysely": "kysely-codegen --camel-case --url postgres://postgres:postgres@localhost:5432/app --out-file ./src/server/kysely/types.ts",
    "lint": "pnpm biome check --apply ."
  },
  "engines": {
    "node": "20.13.0"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@graphql-tools/graphql-file-loader": "^8.0.1",
    "@graphql-tools/load": "^8.0.2",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.4",
    "@graphql-tools/schema": "^10.0.4",
    "fastify": "^4.28.0",
    "graphql": "^16.8.2",
    "kysely": "^0.27.3",
    "lodash-es": "^4.17.21",
    "pg": "^8.12.0",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/graphql-modules-preset": "^4.0.7",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-resolvers": "^4.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.6",
    "@types/pg": "^8.11.6",
    "copyfiles": "^2.4.1",
    "kysely-codegen": "^0.15.0",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.1.1+sha512.14e915759c11f77eac07faba4d019c193ec8637229e62ec99eefb7cf3c3b75c64447882b7c485142451ee3a6b408059cdfb7b7fa0341b975f12d0f7629c71195"
}