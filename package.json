{
  "name": "ts-graphql-server-base",
  "version": "1.0.0",
  "author": "Kei Fujikawa",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env --watch-path ./src --import tsx ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "build": "rimraf dist && tsc && copyfiles -u 1 'src/**/*.graphql' dist/",
    "gen:graphql": "graphql-codegen-esm --config codegen.ts",
    "gen:kysely": "kysely-codegen --camel-case --url postgres://postgres:postgres@localhost:5432/app --out-file ./src/common/db/types.ts",
    "lint": "pnpm biome check --write .",
    "test": "glob -c \"node --import tsx --test\" \"./src/**/*.test.ts\""
  },
  "engines": {
    "node": "20.17.0",
    "pnpm": "9.10.0",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/compress": "^7.0.3",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/merge": "^9.1.7",
    "@graphql-tools/schema": "^10.0.31",
    "dataloader": "^2.2.3",
    "fastify": "^4.29.1",
    "graphql": "^16.12.0",
    "graphql-constraint-directive": "^5.4.3",
    "graphql-scalars": "^1.25.0",
    "kysely": "^0.28.10",
    "lodash-es": "^4.17.22",
    "pg": "^8.16.3",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/graphql-modules-preset": "^4.0.17",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-resolvers": "^4.5.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "copyfiles": "^2.4.1",
    "glob": "^11.1.0",
    "kysely-codegen": "^0.19.0",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c"
}